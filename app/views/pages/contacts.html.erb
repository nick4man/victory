<% content_for :title, "Контакты" %>

<div class="bg-white">
  <!-- Header -->
  <div class="bg-gradient-to-r from-primary-600 to-primary-800 py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-extrabold tracking-tight text-white">
        Контакты
      </h1>
      <p class="mt-4 text-xl text-primary-100">
        Мы всегда рады помочь вам с любыми вопросами
      </p>
    </div>
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 gap-10 lg:grid-cols-2">
      <!-- Contact Information -->
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Контактная информация</h2>
        
        <% @offices.each do |office| %>
          <div class="mb-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              <%= office[:name] %>
            </h3>

            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="h-6 w-6 text-primary-600 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900">Адрес</p>
                  <p class="text-sm text-gray-600"><%= office[:address] %></p>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="h-6 w-6 text-primary-600 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900">Телефон</p>
                  <%= link_to office[:phone], "tel:#{office[:phone]}", class: "text-sm text-primary-600 hover:text-primary-700" %>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="h-6 w-6 text-primary-600 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900">Email</p>
                  <%= link_to office[:email], "mailto:#{office[:email]}", class: "text-sm text-primary-600 hover:text-primary-700" %>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="h-6 w-6 text-primary-600 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900">Режим работы</p>
                  <p class="text-sm text-gray-600"><%= office[:working_hours] %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Social Media -->
        <div class="mt-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Мы в соцсетях</h3>
          <div class="flex space-x-4">
            <a href="#" class="text-gray-400 hover:text-gray-500">
              <span class="sr-only">Facebook</span>
              <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" />
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-gray-500">
              <span class="sr-only">Instagram</span>
              <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" />
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-gray-500">
              <span class="sr-only">VKontakte</span>
              <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zm4.685 14.063c-.326.28-.957.82-1.333.82-.233 0-.326-.093-.465-.28-.372-.513-.698-.98-1.023-1.447-.14-.186-.28-.326-.512-.326h-.605c-.326 0-.419.093-.419.419v1.54c0 .326-.093.419-.605.419h-1.447c-.419 0-.512-.093-.512-.419V9.815c0-.279.093-.372.372-.372h3.163c1.54 0 2.47.93 2.47 2.47 0 .93-.465 1.54-1.308 1.86.465.465.977 1.26 1.54 1.912.186.233.279.326.093.558-.093.093-.233.14-.419.14-.093 0-.186-.047-.372-.14-.14-.14-.326-.326-.465-.512-.419-.558-.885-1.163-1.308-1.68-.093-.14-.186-.233-.326-.233h-.651c-.279 0-.372.093-.372.372v1.54c0 .326-.093.419-.605.419h-1.447c-.419 0-.512-.093-.512-.419V9.815c0-.279.093-.372.372-.372h3.163c1.54 0 2.47.93 2.47 2.47 0 .93-.465 1.54-1.308 1.86.465.465.977 1.26 1.54 1.912.186.233.279.326.093.558z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Напишите нам</h2>
        
        <%= form_with url: send_contact_form_path, method: :post, class: "space-y-6" do |f| %>
          <div>
            <%= label_tag :name, "Ваше имя *", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag :name, nil, 
                required: true,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" %>
          </div>

          <div>
            <%= label_tag :email, "Email *", class: "block text-sm font-medium text-gray-700" %>
            <%= email_field_tag :email, nil, 
                required: true,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" %>
          </div>

          <div>
            <%= label_tag :phone, "Телефон", class: "block text-sm font-medium text-gray-700" %>
            <%= telephone_field_tag :phone, nil, 
                placeholder: "+7 (___) ___-__-__",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" %>
          </div>

          <div>
            <%= label_tag :subject, "Тема", class: "block text-sm font-medium text-gray-700" %>
            <%= select_tag :subject, 
                options_for_select([
                  ['Общий вопрос', 'general'],
                  ['Покупка недвижимости', 'buy'],
                  ['Продажа недвижимости', 'sell'],
                  ['Аренда', 'rent'],
                  ['Ипотека', 'mortgage'],
                  ['Юридические услуги', 'legal'],
                  ['Другое', 'other']
                ]),
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" %>
          </div>

          <div>
            <%= label_tag :message, "Сообщение *", class: "block text-sm font-medium text-gray-700" %>
            <%= text_area_tag :message, nil, 
                rows: 4,
                required: true,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" %>
          </div>

          <!-- Honeypot field (hidden from users) -->
          <div style="position: absolute; left: -5000px;">
            <%= text_field_tag :website, nil, tabindex: -1, autocomplete: "off" %>
          </div>

          <div>
            <%= submit_tag "Отправить сообщение", 
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Map -->
    <div class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">Как нас найти</h2>
      <div class="bg-gray-200 rounded-lg overflow-hidden" style="height: 400px;">
        <div id="contact-map" 
             data-controller="yandex-map" 
             data-yandex-map-coordinates-value="<%= @offices.first[:coordinates].to_json %>"
             style="width: 100%; height: 100%;">
        </div>
      </div>
    </div>
  </div>
</div>

