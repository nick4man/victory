<% content_for :title, "Профиль" %>

<div class="py-6">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
    <!-- Page header -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Мой профиль</h1>
        <p class="mt-2 text-sm text-gray-600">
          Управляйте своей личной информацией
        </p>
      </div>
      <%= link_to edit_dashboard_profile_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Редактировать профиль
      <% end %>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <!-- Avatar section -->
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <% if @user.avatar_url.present? %>
              <%= image_tag @user.avatar_url, class: "h-24 w-24 rounded-full object-cover" %>
            <% else %>
              <div class="h-24 w-24 rounded-full bg-primary-100 flex items-center justify-center">
                <span class="text-primary-600 font-bold text-4xl">
                  <%= @user.initials %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="ml-6">
            <h3 class="text-2xl font-bold text-gray-900">
              <%= @user.full_name %>
            </h3>
            <p class="text-sm text-gray-500">
              <%= @user.role_humanized %>
            </p>
            <% if @user.company.present? %>
              <p class="text-sm text-gray-500 mt-1">
                <%= @user.company %>
                <% if @user.position.present? %>
                  · <%= @user.position %>
                <% end %>
              </p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Profile information -->
      <div class="px-4 py-5 sm:p-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @user.email %>
              <% if @user.confirmed? %>
                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                  Подтвержден
                </span>
              <% else %>
                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                  Не подтвержден
                </span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Телефон</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @user.phone.present? ? @user.formatted_phone : "Не указан" %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Имя</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @user.first_name.present? ? @user.first_name : "Не указано" %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Фамилия</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @user.last_name.present? ? @user.last_name : "Не указано" %>
            </dd>
          </div>

          <% if @user.bio.present? %>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">О себе</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= simple_format(@user.bio) %>
              </dd>
            </div>
          <% end %>

          <div>
            <dt class="text-sm font-medium text-gray-500">Дата регистрации</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= l(@user.created_at, format: :long) %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Последняя активность</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @user.last_activity_at.present? %>
                <%= time_ago_in_words(@user.last_activity_at) %> назад
              <% else %>
                Н/Д
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Всего входов</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @user.sign_in_count %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Последний вход</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @user.last_sign_in_at.present? %>
                <%= l(@user.last_sign_in_at, format: :short) %>
              <% else %>
                Н/Д
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Statistics -->
      <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Статистика</h3>
        <dl class="grid grid-cols-2 gap-5 sm:grid-cols-4">
          <div class="overflow-hidden rounded-lg bg-gray-50 px-4 py-5">
            <dt class="truncate text-sm font-medium text-gray-500">Избранное</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
              <%= @user.favorites_count %>
            </dd>
          </div>

          <div class="overflow-hidden rounded-lg bg-gray-50 px-4 py-5">
            <dt class="truncate text-sm font-medium text-gray-500">Заявки</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
              <%= @user.inquiries_count %>
            </dd>
          </div>

          <div class="overflow-hidden rounded-lg bg-gray-50 px-4 py-5">
            <dt class="truncate text-sm font-medium text-gray-500">Просмотры</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
              <%= @user.property_views.count %>
            </dd>
          </div>

          <div class="overflow-hidden rounded-lg bg-gray-50 px-4 py-5">
            <dt class="truncate text-sm font-medium text-gray-500">Объекты</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
              <%= @user.properties_count %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- OAuth connections -->
      <% if @user.provider.present? %>
        <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Подключенные аккаунты</h3>
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% case @user.provider %>
              <% when 'google_oauth2' %>
                <svg class="h-8 w-8" viewBox="0 0 24 24">
                  <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
              <% when 'yandex' %>
                <svg class="h-8 w-8" viewBox="0 0 24 24">
                  <path fill="#FF0000" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm3.5 15h-2.2l-2.3-5.5H9.8V17h-2V7h4.3c2.1 0 3.4 1.1 3.4 2.9 0 1.4-.8 2.3-2 2.6l2 4.5z"/>
                </svg>
              <% end %>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-900">
                <%= @user.provider.humanize %>
              </p>
              <p class="text-sm text-gray-500">
                Подключено
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Actions -->
      <div class="border-t border-gray-200 px-4 py-4 sm:px-6">
        <div class="flex justify-between items-center">
          <%= link_to edit_dashboard_profile_path, 
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Редактировать профиль
          <% end %>

          <%= link_to dashboard_settings_path, 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Настройки
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

