<% content_for :title, "Заявка ##{@inquiry.id}" %>

<div class="py-6">
  <div class="mx-auto max-w-5xl px-4 sm:px-6 md:px-8">
    <!-- Page header -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <%= link_to dashboard_inquiries_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
          <svg class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Назад к заявкам
        <% end %>

        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                     <%= case @inquiry.status
                         when 'new' then 'bg-blue-100 text-blue-800'
                         when 'in_progress' then 'bg-yellow-100 text-yellow-800'
                         when 'completed' then 'bg-green-100 text-green-800'
                         when 'cancelled' then 'bg-gray-100 text-gray-800'
                         else 'bg-gray-100 text-gray-800'
                         end %>">
          <%= @inquiry.status_humanized %>
        </span>
      </div>

      <h1 class="text-3xl font-bold text-gray-900">
        Заявка #<%= @inquiry.id %>
      </h1>
      <p class="mt-2 text-sm text-gray-600">
        <%= @inquiry.inquiry_type_humanized %>
      </p>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      <!-- Main content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Inquiry details -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-5 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Детали заявки</h3>
          </div>
          <div class="px-6 py-4">
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">Тип заявки</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @inquiry.inquiry_type_humanized %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Статус</dt>
                <dd class="mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                               <%= case @inquiry.status
                                   when 'new' then 'bg-blue-100 text-blue-800'
                                   when 'in_progress' then 'bg-yellow-100 text-yellow-800'
                                   when 'completed' then 'bg-green-100 text-green-800'
                                   when 'cancelled' then 'bg-gray-100 text-gray-800'
                                   else 'bg-gray-100 text-gray-800'
                                   end %>">
                    <%= @inquiry.status_humanized %>
                  </span>
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Дата создания</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= l(@inquiry.created_at, format: :long) %></dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Последнее обновление</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= l(@inquiry.updated_at, format: :long) %></dd>
              </div>

              <% if @inquiry.message.present? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500">Сообщение</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= simple_format(@inquiry.message) %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- Property info -->
        <% if @inquiry.property %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-5 border-b border-gray-200">
              <h3 class="text-lg font-medium text-gray-900">Объект недвижимости</h3>
            </div>
            <div class="px-6 py-4">
              <%= link_to property_path(@inquiry.property), class: "flex items-center space-x-4 hover:bg-gray-50 -mx-6 px-6 py-2 transition" do %>
                <% if @inquiry.property.primary_image %>
                  <%= image_tag @inquiry.property.primary_image.url, class: "h-20 w-20 rounded-lg object-cover" %>
                <% else %>
                  <div class="h-20 w-20 rounded-lg bg-gray-200 flex items-center justify-center">
                    <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                  </div>
                <% end %>

                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= @inquiry.property.title %>
                  </p>
                  <p class="text-lg font-semibold text-primary-600">
                    <%= number_to_currency(@inquiry.property.price, unit: "₽", separator: ",", delimiter: " ", format: "%n %u") %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= @inquiry.property.address %>
                  </p>
                </div>

                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Timeline -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-5 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">История</h3>
          </div>
          <div class="px-6 py-4">
            <% if @timeline.present? && @timeline.any? %>
              <div class="flow-root">
                <ul class="-mb-8">
                  <% @timeline.each_with_index do |event, index| %>
                    <li>
                      <div class="relative pb-8">
                        <% unless index == @timeline.length - 1 %>
                          <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                        <% end %>
                        <div class="relative flex space-x-3">
                          <div>
                            <span class="h-8 w-8 rounded-full bg-primary-500 flex items-center justify-center ring-8 ring-white">
                              <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                            </span>
                          </div>
                          <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                            <div>
                              <p class="text-sm text-gray-900">
                                <%= event[:description] %>
                              </p>
                            </div>
                            <div class="text-right text-sm whitespace-nowrap text-gray-500">
                              <%= time_ago_in_words(event[:timestamp]) %> назад
                            </div>
                          </div>
                        </div>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% else %>
              <p class="text-sm text-gray-500">Нет событий</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Agent info -->
        <% if @inquiry.agent %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-5 border-b border-gray-200">
              <h3 class="text-lg font-medium text-gray-900">Ваш агент</h3>
            </div>
            <div class="px-6 py-4">
              <div class="flex items-center mb-4">
                <% if @inquiry.agent.avatar_url.present? %>
                  <%= image_tag @inquiry.agent.avatar_url, class: "h-12 w-12 rounded-full object-cover" %>
                <% else %>
                  <div class="h-12 w-12 rounded-full bg-primary-100 flex items-center justify-center">
                    <span class="text-primary-600 font-semibold text-lg">
                      <%= @inquiry.agent.initials %>
                    </span>
                  </div>
                <% end %>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">
                    <%= @inquiry.agent.full_name %>
                  </p>
                  <p class="text-xs text-gray-500">
                    Менеджер
                  </p>
                </div>
              </div>

              <div class="space-y-3">
                <% if @inquiry.agent.phone.present? %>
                  <%= link_to "tel:#{@inquiry.agent.phone}", 
                      class: "flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
                    <svg class="mr-2 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <%= @inquiry.agent.formatted_phone %>
                  <% end %>
                <% end %>

                <% if @inquiry.agent.email.present? %>
                  <%= link_to "mailto:#{@inquiry.agent.email}", 
                      class: "flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
                    <svg class="mr-2 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <%= @inquiry.agent.email %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Actions -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-5 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Действия</h3>
          </div>
          <div class="px-6 py-4 space-y-3">
            <% if @inquiry.may_cancel? %>
              <%= button_to dashboard_inquiry_path(@inquiry), 
                  method: :delete,
                  data: { confirm: "Вы уверены, что хотите отменить заявку?" },
                  class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Отменить заявку
              <% end %>
            <% end %>

            <%= link_to dashboard_inquiries_path, 
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Все заявки
            <% end %>
          </div>
        </div>

        <!-- Contact info -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">
                Нужна помощь?
              </h3>
              <div class="mt-2 text-sm text-blue-700">
                <p>
                  Свяжитесь с нашей службой поддержки по телефону 
                  <a href="tel:+78005557777" class="font-medium underline">8 (800) 555-77-77</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

