<% content_for :title, "Редактирование профиля" %>

<div class="py-6">
  <div class="mx-auto max-w-3xl px-4 sm:px-6 md:px-8">
    <!-- Page header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Редактировать профиль</h1>
      <p class="mt-2 text-sm text-gray-600">
        Обновите свою личную информацию
      </p>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <%= form_with(model: @user, url: dashboard_profile_path, method: :patch, class: "space-y-6") do |f| %>
        <div class="px-4 py-5 sm:p-6">
          <!-- Avatar -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Фото профиля
            </label>
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <% if @user.avatar_url.present? %>
                  <%= image_tag @user.avatar_url, class: "h-24 w-24 rounded-full object-cover" %>
                <% else %>
                  <div class="h-24 w-24 rounded-full bg-primary-100 flex items-center justify-center">
                    <span class="text-primary-600 font-bold text-4xl">
                      <%= @user.initials %>
                    </span>
                  </div>
                <% end %>
              </div>
              <div class="ml-6">
                <%= f.file_field :avatar, 
                    class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100" %>
                <p class="mt-2 text-xs text-gray-500">
                  PNG, JPG до 5MB
                </p>
              </div>
            </div>
          </div>

          <!-- Name fields -->
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <%= f.label :first_name, "Имя", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :first_name, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm" %>
              <% if @user.errors[:first_name].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @user.errors[:first_name].first %></p>
              <% end %>
            </div>

            <div>
              <%= f.label :last_name, "Фамилия", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :last_name, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm" %>
              <% if @user.errors[:last_name].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @user.errors[:last_name].first %></p>
              <% end %>
            </div>
          </div>

          <!-- Contact fields -->
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 mt-6">
            <div>
              <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm" %>
              <% if @user.errors[:email].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @user.errors[:email].first %></p>
              <% end %>
            </div>

            <div>
              <%= f.label :phone, "Телефон", class: "block text-sm font-medium text-gray-700" %>
              <%= f.telephone_field :phone, 
                  placeholder: "+7 (___) ___-__-__",
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm" %>
              <% if @user.errors[:phone].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @user.errors[:phone].first %></p>
              <% end %>
            </div>
          </div>

          <!-- Company fields -->
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 mt-6">
            <div>
              <%= f.label :company, "Компания", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :company, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm" %>
            </div>

            <div>
              <%= f.label :position, "Должность", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :position, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm" %>
            </div>
          </div>

          <!-- Bio -->
          <div class="mt-6">
            <%= f.label :bio, "О себе", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :bio, 
                rows: 4,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm",
                placeholder: "Расскажите о себе..." %>
            <p class="mt-2 text-sm text-gray-500">
              Краткое описание для вашего профиля
            </p>
          </div>
        </div>

        <!-- Form actions -->
        <div class="bg-gray-50 px-4 py-3 text-right sm:px-6 space-x-3">
          <%= link_to dashboard_profile_path, 
              class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
            Отмена
          <% end %>
          
          <%= f.submit "Сохранить изменения", 
              class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
        </div>
      <% end %>
    </div>

    <!-- Security section -->
    <div class="mt-8 bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2">
          Безопасность
        </h3>
        <p class="text-sm text-gray-500 mb-4">
          Управление паролем и настройками безопасности
        </p>
        
        <%= link_to edit_user_registration_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
          </svg>
          Изменить пароль
        <% end %>
      </div>
    </div>

    <!-- Delete account section -->
    <div class="mt-8 bg-white shadow sm:rounded-lg border border-red-200">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-red-900 mb-2">
          Опасная зона
        </h3>
        <p class="text-sm text-gray-500 mb-4">
          Удаление аккаунта необратимо. Все ваши данные будут удалены.
        </p>
        
        <%= button_to "Удалить аккаунт", 
            registration_path(resource_name), 
            method: :delete,
            data: { confirm: "Вы уверены? Это действие нельзя отменить!" },
            class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    </div>
  </div>
</div>

