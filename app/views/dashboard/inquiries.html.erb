<% content_for :title, "Мои заявки" %>

<div class="py-6">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
    <!-- Page header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Мои заявки</h1>
      <p class="mt-2 text-sm text-gray-600">
        Отслеживайте статус своих заявок
      </p>
    </div>

    <!-- Statistics -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="rounded-md bg-primary-500 p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Всего заявок</dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-semibold text-gray-900">
                    <%= @total_count %>
                  </div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="rounded-md bg-yellow-500 p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Активные</dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-semibold text-gray-900">
                    <%= @active_count %>
                  </div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="rounded-md bg-green-500 p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Завершенные</dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-semibold text-gray-900">
                    <%= @completed_count %>
                  </div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Фильтры</h3>
      </div>
      <div class="px-6 py-4">
        <%= form_with url: dashboard_inquiries_path, method: :get, class: "grid grid-cols-1 gap-4 sm:grid-cols-3" do |f| %>
          <div>
            <%= f.label :status, "Статус", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :status, 
                options_for_select([
                  ['Все статусы', ''],
                  ['Новые', 'new'],
                  ['В работе', 'in_progress'],
                  ['Завершенные', 'completed'],
                  ['Отмененные', 'cancelled']
                ], params[:status]),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm" %>
          </div>

          <div>
            <%= f.label :type, "Тип заявки", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :type, 
                options_for_select([
                  ['Все типы', ''],
                  ['Консультация', 'consultation'],
                  ['Показ', 'viewing'],
                  ['Обратный звонок', 'callback'],
                  ['Ипотека', 'mortgage'],
                  ['Оценка', 'evaluation']
                ], params[:type]),
                {},
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm" %>
          </div>

          <div class="flex items-end">
            <%= f.submit "Применить", 
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Inquiries list -->
    <% if @inquiries.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <ul class="divide-y divide-gray-200">
          <% @inquiries.each do |inquiry| %>
            <li>
              <%= link_to dashboard_inquiry_path(inquiry), class: "block hover:bg-gray-50 transition" do %>
                <div class="px-6 py-4">
                  <div class="flex items-center justify-between">
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center justify-between mb-2">
                        <p class="text-sm font-medium text-primary-600 truncate">
                          Заявка #<%= inquiry.id %>
                        </p>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                     <%= case inquiry.status
                                         when 'new' then 'bg-blue-100 text-blue-800'
                                         when 'in_progress' then 'bg-yellow-100 text-yellow-800'
                                         when 'completed' then 'bg-green-100 text-green-800'
                                         when 'cancelled' then 'bg-gray-100 text-gray-800'
                                         else 'bg-gray-100 text-gray-800'
                                         end %>">
                          <%= inquiry.status_humanized %>
                        </span>
                      </div>

                      <p class="text-sm font-semibold text-gray-900 mb-1">
                        <%= inquiry.inquiry_type_humanized %>
                      </p>

                      <% if inquiry.property %>
                        <p class="text-sm text-gray-600 mb-2 line-clamp-1">
                          <%= inquiry.property.title %>
                        </p>
                      <% end %>

                      <% if inquiry.message.present? %>
                        <p class="text-sm text-gray-500 mb-2 line-clamp-2">
                          <%= inquiry.message %>
                        </p>
                      <% end %>

                      <div class="flex items-center text-xs text-gray-400 space-x-4">
                        <span class="flex items-center">
                          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          <%= l(inquiry.created_at, format: :short) %>
                        </span>
                        
                        <% if inquiry.agent %>
                          <span class="flex items-center">
                            <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <%= inquiry.agent.full_name %>
                          </span>
                        <% end %>
                      </div>
                    </div>

                    <div class="ml-4 flex-shrink-0">
                      <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Pagination -->
      <div class="mt-6 flex justify-center">
        <%= paginate @inquiries, theme: 'tailwind' %>
      </div>
    <% else %>
      <!-- Empty state -->
      <div class="bg-white shadow rounded-lg p-12">
        <div class="text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Нет заявок</h3>
          <p class="mt-1 text-sm text-gray-500">
            <%= params[:status].present? || params[:type].present? ? 
                "Попробуйте изменить фильтры" : 
                "У вас пока нет ни одной заявки" %>
          </p>
          <div class="mt-6">
            <% if params[:status].present? || params[:type].present? %>
              <%= link_to dashboard_inquiries_path, 
                  class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700" do %>
                Сбросить фильтры
              <% end %>
            <% else %>
              <%= link_to properties_path, 
                  class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700" do %>
                Перейти к каталогу
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

