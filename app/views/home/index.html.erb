<%# Главная страница АН "Виктори" %>
<% content_for :meta_tags do %>
  <%= tag.meta name: 'description', content: 'АН "Виктори" - надежное агентство недвижимости. Купить, продать или снять квартиру в Москве. Помощь с ипотекой и юридическим сопровождением.' %>
<% end %>

<!-- Hero Section -->
<section class="relative bg-gradient-to-r from-blue-900 to-blue-700 text-white" data-controller="hero">
  <div class="absolute inset-0 bg-black opacity-40"></div>
  <%# Background image временно отключено: asset не найден %>
  <%# <div class="absolute inset-0" style="background-image: url('<%= asset_path('hero-bg.jpg') %>'); background-size: cover; background-position: center; mix-blend-mode: overlay;"></div> %>
  
  <div class="relative container mx-auto px-4 py-20 md:py-32">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
        Найдите идеальную недвижимость
      </h1>
      <p class="text-xl md:text-2xl mb-12 text-gray-200">
        Более <%= number_with_delimiter(@statistics[:total_properties]) %> объектов для покупки и аренды
      </p>

      <!-- Search Form -->
      <div class="bg-white rounded-lg shadow-2xl p-6 md:p-8">
        <!-- Tabs -->
        <div class="flex space-x-4 mb-6 border-b border-gray-200" data-controller="tabs">
          <button type="button" class="tab-button px-6 py-3 font-semibold text-primary-600 border-b-2 border-primary-600" data-tabs-target="button" data-action="click->tabs#switch" data-tab="buy">
            Купить
          </button>
          <button type="button" class="tab-button px-6 py-3 font-semibold text-gray-500 hover:text-primary-600 transition" data-tabs-target="button" data-action="click->tabs#switch" data-tab="rent">
            Снять
          </button>
        </div>

        <%= form_with url: properties_path, method: :get, class: "space-y-4" do |f| %>
          <input type="hidden" name="q[deal_type_eq]" value="sale" data-tabs-target="dealType">
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Property Type -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Тип недвижимости</label>
              <select name="q[property_type_id_eq]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent text-gray-800">
                <option value="">Любой</option>
                <option value="1">Квартира</option>
                <option value="2">Дом</option>
                <option value="3">Коммерческая</option>
              </select>
            </div>

            <!-- Rooms -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Комнат</label>
              <select name="q[rooms_eq]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent text-gray-800">
                <option value="">Не важно</option>
                <option value="0">Студия</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4+</option>
              </select>
            </div>

            <!-- District -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Район</label>
              <input type="text" name="q[district_cont]" placeholder="Например: Центральный" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent text-gray-800">
            </div>
          </div>

          <!-- Price Range -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Цена от</label>
              <input type="number" name="q[price_gteq]" placeholder="1 000 000" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent text-gray-800">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Цена до</label>
              <input type="number" name="q[price_lteq]" placeholder="10 000 000" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent text-gray-800">
            </div>
          </div>

          <button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white font-bold py-4 px-8 rounded-lg transition shadow-lg transform hover:scale-105">
            <svg class="inline-block w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            Найти недвижимость
          </button>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Quick Actions -->
<section class="py-12 bg-white -mt-16 relative z-10">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Купить -->
      <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl p-8 text-white shadow-xl hover:shadow-2xl transition transform hover:-translate-y-1">
        <%= link_to properties_path(q: { deal_type_eq: 'sale' }), class: "block" do %>
          <div class="flex items-center mb-4">
            <div class="bg-white bg-opacity-20 p-3 rounded-lg">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold mb-2">Купить квартиру</h3>
          <p class="text-blue-100 mb-4"><%= number_with_delimiter(@statistics[:properties_for_sale]) %> объектов в продаже</p>
          <span class="text-sm font-semibold inline-flex items-center">
            Смотреть каталог
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </span>
        <% end %>
      </div>

      <!-- Снять -->
      <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl p-8 text-white shadow-xl hover:shadow-2xl transition transform hover:-translate-y-1">
        <%= link_to properties_path(q: { deal_type_eq: 'rent' }), class: "block" do %>
          <div class="flex items-center mb-4">
            <div class="bg-white bg-opacity-20 p-3 rounded-lg">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold mb-2">Снять квартиру</h3>
          <p class="text-green-100 mb-4"><%= number_with_delimiter(@statistics[:properties_for_rent]) %> вариантов аренды</p>
          <span class="text-sm font-semibold inline-flex items-center">
            Смотреть каталог
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </span>
        <% end %>
      </div>

      <!-- Продать -->
      <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl p-8 text-white shadow-xl hover:shadow-2xl transition transform hover:-translate-y-1">
        <%= link_to sell_evaluation_path, class: "block" do %>
          <div class="flex items-center mb-4">
            <div class="bg-white bg-opacity-20 p-3 rounded-lg">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold mb-2">Продать квартиру</h3>
          <p class="text-purple-100 mb-4">Бесплатная оценка за 5 минут</p>
          <span class="text-sm font-semibold inline-flex items-center">
            Узнать стоимость
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</section>

