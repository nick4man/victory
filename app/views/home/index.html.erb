<!-- Mortgage Calculator Widget -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-8 md:p-12 shadow-lg">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Калькулятор ипотеки</h2>
        <p class="text-gray-600">Рассчитайте ежемесячный платеж за 30 секунд</p>
      </div>

      <div class="bg-white rounded-xl p-6 md:p-8 shadow" data-controller="mortgage-calculator">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Стоимость недвижимости (₽)</label>
            <input type="number" data-mortgage-calculator-target="price" data-action="input->mortgage-calculator#calculate" placeholder="5 000 000" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Первоначальный взнос (₽)</label>
            <input type="number" data-mortgage-calculator-target="initialPayment" data-action="input->mortgage-calculator#calculate" placeholder="1 000 000" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Процентная ставка (%)</label>
            <input type="number" step="0.1" data-mortgage-calculator-target="rate" data-action="input->mortgage-calculator#calculate" value="<%= ENV['DEFAULT_MORTGAGE_RATE'] || '10.5' %>" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Срок кредита (лет)</label>
            <input type="number" data-mortgage-calculator-target="term" data-action="input->mortgage-calculator#calculate" value="<%= ENV['DEFAULT_MORTGAGE_TERM_YEARS'] || '20' %>" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
        </div>

